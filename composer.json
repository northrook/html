{
  "name": "northrook/html",
  "description": "Generate HTML elements and attributes.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin",
      "email": "mn@northrook.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Northrook\\HTML\\": "src"
    }
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "ext-dom": "*",
    "ext-libxml": "*",
    "northrook/html-element": "dev-main",
    "northrook/minify": "dev-main",
    "northrook/filesystem": "dev-main",
    "northrook/array-access": "dev-main"
  },
  "require-dev": {
    "phpstan/phpstan": "@stable",
    "northrook/dev-env": "dev-main"
  }
}
